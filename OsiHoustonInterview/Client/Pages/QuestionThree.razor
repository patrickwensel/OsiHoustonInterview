@page "/questionthree"
@inherits QuestionThreeModalBase
@using OsiHoustonInterview.Shared
@inject HttpClient Http

<h3>Question 3:</h3>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-3 mb-3">
            <div class="card-header">
                <h2>Try It</h2>
            </div>
            <div class="card-body">
                <EditForm Model="@questionThreeRequest" OnValidSubmit="SubmitStrings">
                    <DataAnnotationsValidator />
                    <div class="form-group row">
                        <label class="control-label col-md-12">First Filter</label>
                        <div class="col">
                            <InputText class="form-control" @bind-Value="questionThreeRequest.FilterOne" />
                            <ValidationMessage For="@(() => questionThreeRequest.FilterOne)" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-12">Second Filter</label>
                        <div class="col">
                            <InputText class="form-control" @bind-Value="questionThreeRequest.FilterTwo" />
                            <ValidationMessage For="@(() => questionThreeRequest.FilterTwo)" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-12">Third Filter</label>
                        <div class="col">
                            <InputText class="form-control" @bind-Value="questionThreeRequest.FilterThree" />
                            <ValidationMessage For="@(() => questionThreeRequest.FilterThree)" />
                        </div>
                    </div>
                    <div class="form-group" align="right">
                        <button type="submit" class="btn btn-success">Go</button>
                    </div>
                </EditForm>
                <label class="control-label col-md-12">Original Method Time: @questionThreeResponse.OriginalMethodTime</label>
                <label class="control-label col-md-12">Refactor 1 Method Time: @questionThreeResponse.RefactoredMethodTimeOne</label>
                <label class="control-label col-md-12">Refactor 2 Method Time: @questionThreeResponse.RefactoredMethodTimeTwo</label>
                <label class="control-label col-md-12">Refactor 3 Method Time: @questionThreeResponse.RefactoredMethodTimeThree</label>
            </div>
        </div>
    </div>
</div>